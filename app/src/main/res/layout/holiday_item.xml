<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardElevation="4dp"
        card_view:cardCornerRadius="4dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/main"
            android:padding="8dp">
            <TextView
                android:id="@+id/holiday_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Republic Day"
                android:textSize="28sp"
                android:paddingRight="20dp"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/holiday_mon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/holiday_name"
                android:layout_alignParentLeft="true"
                android:fontFamily="sans-serif"
                android:textSize="16sp"
                android:text="January 26"
                />

            <TextView
                android:id="@+id/holiday_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:layout_alignParentRight="true"
                android:layout_below="@id/holiday_name"
                android:textSize="16sp"
                android:text="Monday"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/options"
                android:text="&#8942;"
                android:textSize="20dp"
                android:paddingBottom="8dp"
                android:paddingLeft="10dp"
                android:paddingRight="6dp"
                android:layout_alignParentRight="true"
                android:layout_alignRight="@id/holiday_name" />


        </RelativeLayout>



    </android.support.v7.widget.CardView>

</LinearLayout>